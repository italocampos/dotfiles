#!/bin/bash

# A bash file to init the personal pade workspace


# Util variables and functions
activate() {
	cd $workspaces/pade
	source $env
}

run() {
	pade start-runtime $1
}

read -r -d '' help << EOT
NAME
       env - runs some activation actions for Python dev envs

SYNOPSIS
       env [ENV NAME]
       env -a [ENV NAME]
       env -d

DESCRIPTION
       Activate and deactivate a specific Python dev environment.

OPTIONS
       -a, --activate
              activate the PADE python env

       -d, --deactivate
              dactivate the PADE python env

       -h, --help
              show the help
EOT


# Activities of the script
case $1 in
	'-a' | '--activate')
		activate
		;;

	'-r' | '--run')
		run $2
		;;

	'-e' | '--exit')
		cd $HOME
		deactivate
		;;

	'-h' | '--help')
		echo "$help"
		;;

	*)
		if [[ -e $1 ]]; then
			run $1
		else
			echo 'File not found or unknown option. Use padex -h to see the help.'
		fi
		;;
esac
